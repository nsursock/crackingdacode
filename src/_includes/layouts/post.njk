<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="description" content="{{ description }}">
    <meta name="author" content="{{ author }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="google-site-verification" content="HzJK7D_XB4FuBYkhve3Rmk2O5zcGeKEbvgZYXLiTKHM"/>
    <link href="{{ site.url }}{{ page.url }}" rel="canonical">
    <link rel="preconnect" href="https://unsplash.com">
    <link rel="dns-prefetch" href="https://unsplash.com">
    <link rel="stylesheet" href="/assets/main.bundle.css">
    <link rel="icon" type="image/x-icon" href="/static/img/favicon.ico">
    <script src="/assets/main.bundle.js" defer></script>
    <title>{{ title + ' ' + title2 }} | Cracking Da Code | Sursock Labs</title>
    {% block head %}
      {% if env.environment == 'production' %}
        <!-- Global site tag (gtag.js) - Google Ads: 824380923 -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=AW-824380923"></script>
        <script>
          window.dataLayer = window.dataLayer || [];
          function gtag() {
            dataLayer.push(arguments);
          }
          gtag('js', new Date());
          gtag('config', 'AW-824380923');
        </script>
      {% endif %}
      <meta property='og:title' content="{{ title + ' ' + title2 }}"/>
      <meta property='og:image' content="{{ featured }}&q=80&w=800&h=600"/>
      <meta property='og:description' content="{{ description }}"/>
      <meta property='og:url' content="{{ site.url }}{{ page.url }}"/>
      <meta property='og:type' content="article"/>
      <script>
        if (
          localStorage.theme === 'dark' ||
          (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)
        ) {
          document
            .documentElement
            .classList
            .add('dark')
        } else {
          document
            .documentElement
            .classList
            .remove('dark')
        }
      </script>
    {% endblock %}
  </head>
  <body hx-boost="true" class="{{ 'debug-screens' if env.devMode }} dark:bg-gray-900" x-data="global">
    <div :class="{ 'sticky top-0 z-40 animate-swing' : isScrollingUp }">
      {% include '../header.njk' %}
    </div>
    {% block body %}
      {% include '../partials/affiliate.njk' %}
      <!-- This example requires Tailwind CSS v2.0+ -->
      <div class="relative bg-white overflow-hidden dark:bg-gray-900">
        <div class="max-w-7xl mx-auto">
          <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32 dark:bg-gray-900">
            <svg
              class="hidden lg:block absolute right-0 inset-y-0 h-full w-48 text-white dark:text-gray-900 transform translate-x-1/2"
              fill="currentColor"
              viewbox="0 0 100 100"
              preserveaspectratio="none"
              aria-hidden="true">
              <polygon points="50,0 100,0 50,100 0,100"/>
            </svg>
            <div>
              <div class="relative pt-6 px-4 sm:px-6 lg:px-8"></div>
            </div>
            <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
              <div class="sm:text-center lg:text-left">
                <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
                  <span class="block xl:inline dark:text-white">{{ title }}</span>
                  <span class="block text-indigo-600 xl:inline">{{ title2 }}</span>
                </h1>
                <p class="mt-3 text-base text-gray-500 dark:text-gray-400 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl
                    lg:mx-0">
                  {{ description }}
                </p>
                <div class="mt-4 pt-4 flex items-center sm:justify-center lg:justify-start">
                  {% for auth in authors.authors %}
                    {% if auth.name == author %}
                      <img class="h-16 w-16 rounded-full" data-src="{{ auth.photo }}-small.jpg" alt="Photo of author {{ auth.name }}" x-intersect.once.ratio-0="$el.src = $el.dataset.src"/>
                      <div class="ml-3 flex flex-col">
                        <span class="text-sm font-semibold dark:text-white">
                          Written by {{ auth.name }}
                        </span>
                        <span class="text-sm text-gray-500 dark:text-gray-400" x-data="{ time: {{ content.split(' ').length / 200 }} }">
                          {{ date | date("MMM dd, yyyy") }} at {{ date | date("kk:mm") }} â€¢ <span x-text="`${Math.round(time).toString().split('.')[0]} min read`"/>
                        </span>
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>
                <div class="mt-5 sm:mt-8 sm:justify-center lg:justify-start flex flex-wrap lg:max-w-md ">
                  {% for tag in tags %}
                    {% if tag != 'blog' %}
                      {% if loop.index == 1 %}
                        <div class="rounded-md shadow mt-3 mr-2 ">
                          <span class="w-full flex items-center justify-center px-5 py-2 border border-transparent text-base font-medium rounded-md
                              text-white bg-indigo-600 md:text-lg dark:text-black dark:bg-indigo-400 ">
                            {{ tag }}
                          </span>
                        </div>
                      {% else %}
                        <div class="mt-3  mr-2 ">
                          <span class="w-full flex items-center justify-center px-5 py-2 border border-transparent text-base font-medium rounded-md
                              text-indigo-700 bg-indigo-100 md:text-lg dark:text-indigo-300 dark:bg-indigo-900 ">
                            {{ tag }}
                          </span>
                        </div>
                      {% endif %}
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
            </main>
          </div>
        </div>
        <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
          <picture>
            <source media="(max-width: 799px)" srcset="{{ featured }}&q=80&w=480&h=320"/>
            <source media="(min-width: 800px)" srcset="{{ featured }}&q=80&w=1080&h=720"/>
            <img class="h-56 w-full object-cover sm:h-72 md:h-96 lg:w-full lg:h-full" src="{{ featured }}&q=80&w=1920&h=1280" alt="{{ title1 + ' ' + title2 }}"/>
          </picture>
        </div>
      </div>
      <div
        x-data="{ processFinished: false }"
        x-effect="if ($store.auth.user) checkPermission().then(cond => paymentMade = cond)">
        <div class="flex flex-col md:flex-row">
          {% include 'partials/content.njk' %}
        </div>
        {% if protection %}
          <div x-show="(!$store.auth.user || ($store.auth.user && !paymentMade)) && percent > 15 && !processFinished">
            {% include 'partials/protection-modal.njk' %}
          </div>
        {% endif %}
        <div x-show="isMobile" class="flex flex-col items-center justify-center">
          <span class="mb-2 dark:text-gray-100">Share</span>
          <div class="flex items-center justify-center mb-8 -space-x-px">
            {% set mobile = true %}
            {% include 'partials/sharing.njk' %}
          </div>
        </div>
        {% for auth in authors.authors %}
          {% if auth.name == author %}
            <div class=" mb-6 mx-4 md:max-w-3xl lg:max-w-4xl md:mx-auto bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden">
              <div class="md:flex md:h-full">
                <div class="md:flex-shrink-0">
                  <img class="w-full object-cover md:h-full md:w-48" src="{{ auth.photo }}.jpg" alt="Photo of author {{ auth.name }}"/>
                </div>
                <div class="p-8 dark:bg-gray-800">
                  <div class="uppercase tracking-wide text-sm text-indigo-500 font-semibold">
                    Written by {{ auth.name }}
                  </div>
                  <a rel="noopener" target="_blank" href="{{ versions[0].link }}" class="dark:text-white block mt-1 text-lg leading-tight font-medium text-black hover:underline">
                    Inspired by {{ track }} recorded by {{ versions[0].artist }}
                  </a>
                  <p class="mt-2 text-gray-500 dark:text-gray-400">
                    {{ auth.biography }}
                  </p>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
        <div
          class="container mt-20 dark:text-gray-100"
          x-show="(!$store.auth.user || ($store.auth.user && !paymentMade)) && percent > 15 && !processFinished">
          <script
            async="async"
            data-cfasync="false"
            src="//pl17474538.highperformancegate.com/bddbb588abda773854dc5dca45cfd922/invoke.js"></script>
          <div id="container-bddbb588abda773854dc5dca45cfd922"></div>
        </div>
      </div>
      {% include 'sections/subscription.njk' %}
      <div id="posts" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:text-center mt-8">
          <p class=" mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl dark:text-white ">
            More to read
          </p>
          <p class=" mt-4 max-w-2xl text-xl text-gray-500 lg:mx-auto dark:text-gray-400 ">
            Check out other articles on this blog. Below find the previous and next ones. You can also browse the most viewed posts
            of the blog.
          </p>
        </div>
        <div class=" mt-5 sm:mt-8 sm:justify-center flex flex-wrap">
          {% set years = collections.postsByYear %}
          {% for year in years %}
            {% if year[0] == date.getFullYear() %}
              <div class="rounded-md shadow mt-3 mr-2 ">
                <a
                  href="/archive/{{ year[0] | slug }}"
                  class="w-full flex items-center justify-center px-5 py-2 border border-transparent text-base font-medium rounded-md
                    text-white bg-indigo-600 hover:bg-indigo-700 md:text-lg dark:text-black dark:bg-indigo-400 dark:hover:bg-indigo-300">
                  {{ year[0] }}
                </a>
              </div>
            {% else %}
              <div class="mt-3  mr-2 ">
                <a
                  href="/archive/{{ year[0] | slug }}"
                  class="w-full flex items-center justify-center px-5 py-2 border border-transparent text-base font-medium rounded-md
                    text-indigo-700 bg-indigo-100 hover:bg-indigo-200 md:text-lg dark:text-indigo-300 dark:bg-indigo-900
                    dark:hover:bg-indigo-800">
                  {{ year[0] }}
                </a>
              </div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="mb-10 mt-5 sm:mt-8 sm:justify-center flex flex-wrap">
          {% for tag in tags %}
            {% if tag != 'blog' %}
              {% if loop.index == 1 %}
                <div class="rounded-md shadow mt-3 mr-2 ">
                  <a
                    href="/tags/{{ tag | slug }}"
                    class="w-full flex items-center justify-center px-5 py-2 border border-transparent text-base font-medium rounded-md
                      text-white bg-indigo-600 hover:bg-indigo-700 md:text-lg dark:text-black dark:bg-indigo-400 dark:hover:bg-indigo-300">
                    {{ tag }}
                  </a>
                </div>
              {% else %}
                <div class="mt-3  mr-2 ">
                  <a
                    href="/tags/{{ tag | slug }}"
                    class="w-full flex items-center justify-center px-5 py-2 border border-transparent text-base font-medium rounded-md
                      text-indigo-700 bg-indigo-100 hover:bg-indigo-200 md:text-lg dark:text-indigo-300 dark:bg-indigo-900
                      dark:hover:bg-indigo-800">
                    {{ tag }}
                  </a>
                </div>
              {% endif %}
            {% endif %}
          {% endfor %}
        </div>
        <ul
          x-data="{ showArticle: false }"
          class="md:h-screen mt-6 flex flex-col space-y-2 sm:space-y-0 sm:flex-row sm:space-x-8 items-center justify-center"
          x-intersect.once="showArticle = true; $el.classList.remove('md:h-screen')">
          {% set previousPost = collections.blog | getPreviousCollectionItem(page) %}
          {% set nextPost = collections.blog | getNextCollectionItem(page) %}
          {% if previousPost %}
            <div x-data="{ type: 'Prev' }">
              {% set post = previousPost %}
              {% include 'partials/postcard.njk' %}
            </div>
          {% endif %}
          {% if nextPost %}
            <div x-data="{ type: 'Next' }">
              {% set post = nextPost %}
              {% include 'partials/postcard.njk' %}
            </div>
          {% endif %}
        </ul>
        {%- if env.environment == 'production' -%}
          <div x-data="{ isTopList: true }">
            {% set postslist = collections.blog | top %}
            <ol
              x-data="{ showArticle: false }"
              class="md:h-screen mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4"
              x-intersect.once="showArticle = true; $el.classList.remove('md:h-screen')">
              {%- for post in postslist -%}
                <div x-data="{ type: '#{{ loop.index }}' }">
                  {%- include 'partials/postcard.njk' -%}
                </div>
              {%- endfor -%}
            </ol>
          </div>
        {%- endif -%}
      </div>
    {% endblock %}
    <section
      id="footer">
