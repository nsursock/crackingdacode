<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="description" content="{{ description }}">
    <meta name="author" content="{{ author }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="google-site-verification" content="ElwriKJxsec5ariCaXI5cy7eo0kMlqtJZF3YOxDOO3w"/>
    <link href="{{ site.url }}{{ page.url }}" rel="canonical">
   {% if env.environment == "production" %}
    <style>
      /* inject-inline: /dist/static/assetscritical.css */
    </style>
    {% endif %}
    <link rel="stylesheet" href="/assets/main.bundle.css">
    <link
    rel="icon" type="image/x-icon" href="/static/img/favicon.ico">
    {# <link rel="preconnect" href="https://fonts.googleapis.com">
                                                                                                <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
                                                                                                <link href="https://fonts.googleapis.com/css2?family=Special+Elite&display=block" rel="stylesheet"> #}
    {% if env.environment == "production" %}
      <script src="/static/js/main.bundle.js" defer></script>
    {% else %}
      <script src="/assets/main.bundle.js" defer></script>
    {% endif %}
    <title>{{ title + ' ' + title2 }} | Sursock Labs</title>
    {% block head %}
      <meta property='og:title' content="{{ title + ' ' + title2 }}"/>
      <meta property='og:image' content="{{ featured }}&q=80&w=800&h=600"/>
      <meta property='og:description' content="{{ description }}"/>
      <meta property='og:url' content="{{ 'https://nsursock.netlify.app' + page.url }}"/>
      <meta property='og:type' content="article"/>
      <script>
        if (
          localStorage.theme === 'dark' ||
          (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)
        ) {
          document
            .documentElement
            .classList
            .add('dark')
        } else {
          document
            .documentElement
            .classList
            .remove('dark')
        }
      </script>
      {% if env.environment == "production" %}
        <!-- Google Tag Manager -->
        <script>
          (function (w, d, s, l, i) {
            w[l] = w[l] || [];
            w[l].push({'gtm.start': new Date().getTime(), event: 'gtm.js'});
            var f = d.getElementsByTagName(s)[0],
              j = d.createElement(s),
              dl = l != 'dataLayer'
                ? '&l=' + l
                : '';
            j.async = true;
            j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl;
            f.parentNode.insertBefore(j, f);
          })(window, document, 'script', 'dataLayer', 'GTM-5MN6MTZ');
        </script>
        <!-- End Google Tag Manager -->
      {% endif %}
    {% endblock %}
  </head>
  <body hx-boost="true" class="{{ 'debug-screens' if env.devMode }} dark:bg-gray-900" x-data="global">
    <div :class="{ 'sticky top-0 z-[200] animate-swing' : isScrollingUp }">
      {% include '../header.njk' %}
    </div>
    {% block body %}
      {% if env.environment == "production" %}
        <!-- Google Tag Manager (noscript) -->
        <noscript>
          <iframe
            src="https://www.googletagmanager.com/ns.html?id=GTM-5MN6MTZ"
            height="0"
            width="0"
            style="display:none;visibility:hidden"></iframe>
        </noscript>
        <!-- End Google Tag Manager (noscript) -->
      {% endif %}
      {% include '../partials/affiliate.html' %}
      <!-- This example requires Tailwind CSS v2.0+ -->
      <div class="relative bg-white overflow-hidden dark:bg-gray-900">
        <div class="max-w-7xl mx-auto">
          <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32 dark:bg-gray-900">
            <svg
              class="hidden lg:block absolute right-0 inset-y-0 h-full w-48 text-white dark:text-gray-900 transform translate-x-1/2"
              fill="currentColor"
              viewbox="0 0 100 100"
              preserveaspectratio="none"
              aria-hidden="true">
              <polygon points="50,0 100,0 50,100 0,100"/>
            </svg>
            <div>
              <div class="relative pt-6 px-4 sm:px-6 lg:px-8"></div>
            </div>
            <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
              <div class="sm:text-center lg:text-left">
                <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
                  <span class="block xl:inline dark:text-white">{{ title }}</span>
                  <span class="block text-indigo-600 xl:inline">{{ title2 }}</span>
                </h1>
                <p class="mt-3 text-base text-gray-500 dark:text-gray-400 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl
                    lg:mx-0">
                  {{ description }}
                </p>
                <div class="mt-4 pt-4 flex items-center sm:justify-center lg:justify-start">
                  {% for auth in authors.authors %}
                    {% if auth.name == author %}
                      <img class="h-16 w-16 rounded-full" data-src="{{ auth.photo }}-small.jpg" alt="Photo of author {{ auth.name }}" x-intersect.once.ratio-0="$el.src = $el.dataset.src"/>
                      <div class="ml-3 flex flex-col">
                        <span class="text-sm font-semibold dark:text-white">
                          Written by {{ auth.name }}
                        </span>
                        <span class="text-sm text-gray-500 dark:text-gray-400" x-data="{ time: {{ content.split(' ').length / 200 }} }">
                          {{ date | date("MMM dd, yyyy") }} at {{ date | date("kk:mm") }} â€¢ <span x-text="`${Math.round(time).toString().split('.')[0]} min read`"/>
                        </span>
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>
                <div class="mt-5 sm:mt-8 sm:justify-center lg:justify-start flex flex-wrap lg:max-w-md ">
                  {% for tag in tags %}
                    {% if tag != 'blog' %}
                      {% if loop.index == 1 %}
                        <div class="rounded-md shadow mt-3 mr-2 ">
                          <span class="w-full flex items-center justify-center px-5 py-2 border border-transparent text-base font-medium rounded-md
                              text-white bg-indigo-600 md:text-lg dark:text-black dark:bg-indigo-400 ">
                            {{ tag }}
                          </span>
                        </div>
                      {% else %}
                        <div class="mt-3  mr-2 ">
                          <span class="w-full flex items-center justify-center px-5 py-2 border border-transparent text-base font-medium rounded-md
                              text-indigo-700 bg-indigo-100 md:text-lg dark:text-indigo-300 dark:bg-indigo-900 ">
                            {{ tag }}
                          </span>
                        </div>
                      {% endif %}
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
            </main>
          </div>
        </div>
        <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
          <picture>
            <source media="(max-width: 799px)" srcset="{{ featured }}&q=80&w=480&h=320"/>
            <source media="(min-width: 800px)" srcset="{{ featured }}&q=80&w=1080&h=720"/>
            <img class="h-56 w-full object-cover sm:h-72 md:h-96 lg:w-full lg:h-full" src="{{ featured }}&q=80&w=1920&h=1280" alt="{{ title1 + ' ' + title2 }}"/>
          </picture>
        </div>
      </div>
      <div class="flex flex-col md:flex-row">
        <aside class="px-4  lg:w-1/4 hidden h-screen sticky top-0 xl:flex items-center justify-center flex-col"></aside>
        <div
          x-intersect.once.ratio-0="Array.from($el.getElementsByClassName('md:float-right')).forEach((aside) => {
            aside.classList.remove('md:-mr-56'), aside.classList.add('md:-mr-24') });
            Array.from($el.getElementsByClassName('md:float-left')).forEach((aside) => { aside.classList.remove('md:-ml-56'),
            aside.classList.add('md:-ml-24') })"
          class="container py-8 max-w-none prose lg:prose-xl dark:prose-invert prose-p:text-justify dark:text-gray-400 sm:w-3/5
            xl:w-2/4">
          {{ content | safe }}
        </div>
        <aside class="px-14 hidden h-screen sticky top-0 md:flex items-center justify-center flex-col dark:text-white">
          Share
          <a
            rel="noopener"
            target="_blank"
            href="https://www.facebook.com/sharer/sharer.php?u=https://nsursock.netlify.app{{ page.url }}"
            class="rounded-t-lg relative inline-flex items-center p-3 text-sm font-medium border bg-white border-gray-300
              text-gray-500 hover:bg-gray-50">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-brand-facebook"
              width="24"
              height="24"
              viewbox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M7 10v4h3v7h4v-7h3l1 -4h-4v-2a1 1 0 0 1 1 -1h3v-4h-3a5 5 0 0 0 -5 5v2h-3"></path>
            </svg>
          </a>
          <a
            rel="noopener"
            target="_blank"
            href="https://twitter.com/intent/tweet?url=https://nsursock.netlify.app{{ page.url }}"
            class=" -mt-px relative inline-flex items-center p-3 text-sm font-medium border bg-white border-gray-300 text-gray-500
              hover:bg-gray-50">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-brand-twitter"
              width="24"
              height="24"
              viewbox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M22 4.01c-1 .49 -1.98 .689 -3 .99c-1.121 -1.265 -2.783 -1.335 -4.38 -.737s-2.643 2.06 -2.62 3.737v1c-3.245 .083 -6.135
                -1.395 -8 -4c0 0 -4.182 7.433 4 11c-1.872 1.247 -3.739 2.088 -6 2c3.308 1.803 6.913 2.423 10.034 1.517c3.58 -1.04 6.522
                -3.723 7.651 -7.742a13.84 13.84 0 0 0 .497 -3.753c-.002 -.249 1.51 -2.772 1.818 -4.013z"></path>
            </svg>
          </a>
          <a
            rel="noopener"
            target="_blank"
            href="https://www.pinterest.com/pin/create/button/?url=https://nsursock.netlify.app{{ page.url }}"
            class=" -mt-px relative inline-flex items-center p-3 text-sm font-medium border bg-white border-gray-300 text-gray-500
              hover:bg-gray-50">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-brand-pinterest"
              width="24"
              height="24"
              viewbox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <line x1="8" y1="20" x2="12" y2="11"></line>
              <path d="M10.7 14c.437 1.263 1.43 2 2.55 2c2.071 0 3.75 -1.554 3.75 -4a5 5 0 1 0 -9.7 1.7"></path>
              <circle cx="12" cy="12" r="9"></circle>
            </svg>
          </a>
          <a
            rel="noopener"
            target="_blank"
            href="https://www.reddit.com/submit?url=https://nsursock.netlify.app{{ page.url }}"
            class=" -mt-px relative inline-flex items-center p-3 text-sm font-medium border bg-white border-gray-300 text-gray-500
              hover:bg-gray-50">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-brand-reddit"
              width="24"
              height="24"
              viewbox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M12 8c2.648 0 5.028 .826 6.675 2.14a2.5 2.5 0 0 1 2.326 4.36c0 3.59 -4.03 6.5 -9 6.5c-4.875 0 -8.845 -2.8 -9 -6.294l-1
                -.206a2.5 2.5 0 0 1 2.326 -4.36c1.646 -1.313 4.026 -2.14 6.674 -2.14z"></path>
              <path d="M12 8l1 -5l6 1"></path>
              <circle cx="19" cy="4" r="1"></circle>
              <circle cx="9" cy="13" r=".5" fill="currentColor"></circle>
              <circle cx="15" cy="13" r=".5" fill="currentColor"></circle>
              <path d="M10 17c.667 .333 1.333 .5 2 .5s1.333 -.167 2 -.5"></path>
            </svg>
          </a>
          <a
            rel="noopener"
            target="_blank"
            href="https://www.linkedin.com/sharing/share-offsite/?url=https://nsursock.netlify.app{{ page.url }}"
            class="rounded-b-lg -mt-px relative inline-flex items-center p-3 text-sm font-medium border bg-white border-gray-300
              text-gray-500 hover:bg-gray-50">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-brand-linkedin"
              width="24"
              height="24"
              viewbox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <rect x="4" y="4" width="16" height="16" rx="2"></rect>
              <line x1="8" y1="11" x2="8" y2="16"></line>
              <line x1="8" y1="8" x2="8" y2="8.01"></line>
              <line x1="12" y1="16" x2="12" y2="11"></line>
              <path d="M16 16v-3a2 2 0 0 0 -4 0"></path>
            </svg>
          </a>
        </aside>
        <aside class="px-4  sm:w-2/5 lg:w-1/4 hidden h-screen sticky top-0 md:flex items-center justify-center flex-col"></aside>
      </div>
      {% for auth in authors.authors %}
        {% if auth.name == author %}
          <div class=" mb-6 max-w-sm md:max-w-3xl lg:max-w-4xl mx-auto bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden">
            <div class="md:flex md:h-full">
              <div class="md:flex-shrink-0">
                <img class="w-full object-cover md:h-full md:w-48" src="{{ auth.photo }}.jpg" alt="Photo of author {{ auth.name }}"/>
              </div>
              <div class="p-8 dark:bg-gray-800">
                <div class="uppercase tracking-wide text-sm text-indigo-500 font-semibold">
                  Written by {{ auth.name }}
                </div>
                <a rel="noopener" target="_blank" href="{{ versions[0].link }}" class="dark:text-white block mt-1 text-lg leading-tight font-medium text-black hover:underline">
                  Inspired by {{ track }} recorded by {{ versions[0].artist }}
                </a>
                <p class="mt-2 text-gray-500 dark:text-gray-400">
                  {{ auth.biography }}
                </p>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
      {% include 'sections/subscription.html' %}
      <div id="posts" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:text-center mt-8">
          <p class=" mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl dark:text-white ">
            More to read
          </p>
          <p class=" mt-4 max-w-2xl text-xl text-gray-500 lg:mx-auto dark:text-gray-400 ">
            Check out other articles on this blog. Below find the previous and next ones. You can also browse the most viewed posts
            of the blog.
          </p>
        </div>
        <div class="mb-10 mt-5 sm:mt-8 sm:justify-center flex flex-wrap">
          {% for tag in tags %}
            {% if tag != 'blog' %}
              {% if loop.index == 1 %}
                <div class="rounded-md shadow mt-3 mr-2 ">
                  <a
                    rel="noopener"
                    target="_blank"
                    href="/tags/{{ tag | slug }}"
                    class="w-full flex items-center justify-center px-5 py-2 border border-transparent text-base font-medium rounded-md
                      text-white bg-indigo-600 hover:bg-indigo-700 md:text-lg dark:text-black dark:bg-indigo-400 dark:hover:bg-indigo-300">
                    {{ tag }}
                  </a>
                </div>
              {% else %}
                <div class="mt-3  mr-2 ">
                  <a
                    rel="noopener"
                    target="_blank"
                    href="/tags/{{ tag | slug }}"
                    class="w-full flex items-center justify-center px-5 py-2 border border-transparent text-base font-medium rounded-md
                      text-indigo-700 bg-indigo-100 hover:bg-indigo-200 md:text-lg dark:text-indigo-300 dark:bg-indigo-900
                      dark:hover:bg-indigo-800">
                    {{ tag }}
                  </a>
                </div>
              {% endif %}
            {% endif %}
          {% endfor %}
        </div>
        <ul
          x-data="{ showArticle: false }"
          class="md:h-screen mt-6 flex flex-col space-y-2 sm:space-y-0 sm:flex-row sm:space-x-8 items-center justify-center"
          x-intersect.once="showArticle = true; $el.classList.remove('md:h-screen')">
          {% set previousPost = collections.blog | getPreviousCollectionItem(page) %}
          {% set nextPost = collections.blog | getNextCollectionItem(page) %}
          {% if previousPost %}
            <div x-data="{ type: 'Prev' }">
              {% set post = previousPost %}
              {% include 'partials/postcard.njk' %}
            </div>
          {% endif %}
          {% if nextPost %}
            <div x-data="{ type: 'Next' }">
              {% set post = nextPost %}
              {% include 'partials/postcard.njk' %}
            </div>
          {% endif %}
        </ul>
        {%- if env.environment == 'production' -%}
          <div x-data="{ isTopList: true }">
            {% set postslist = collections.blog | top %}
            <ol
              x-data="{ showArticle: false }"
              class="md:h-screen mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4"
              x-intersect.once="showArticle = true; $el.classList.remove('md:h-screen')">
              {%- for post in postslist -%}
                <div x-data="{ type: '#{{ loop.index }}' }">
                  {%- include 'partials/postcard.njk' -%}
                </div>
              {%- endfor -%}
            </ol>
          </div>
        {%- endif -%}
      </div>
    {% endblock %}
    {% include 'sections/cta.html' %}
    {% include 'footer.njk' %}
  </body>
</html>