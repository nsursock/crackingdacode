    {% include 'partials/jobs-button.njk' %}
    {% include 'partials/comments-slideover.njk' %}
    {% include 'partials/auth-login-modal.njk' %}
    {% include 'partials/auth-signup-modal.njk' %}
    <div show="percent >= 50 && showDonationPopup">
      {% if not protection %}
        {% include 'partials/popup-donation.njk' %}
