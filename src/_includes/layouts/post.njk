      {% include 'sections/subscription.njk' %}
      <div id="posts" class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mt-8 lg:text-center">
          <p class="mt-2 text-3xl font-extrabold leading-8 tracking-tight text-gray-900 dark:text-white sm:text-4xl">More to read</p>
          <p class="mt-4 max-w-2xl text-xl text-gray-500 dark:text-gray-400 lg:mx-auto">Check out other articles on this blog. Below find the previous and next ones. You can also browse the most viewed posts of the blog.</p>
        </div>
        <div class="mt-5 flex flex-wrap sm:mt-8 sm:justify-center">
          {% set years = collections.postsByYear %}
          {% for year in years %}
            {% if year[0] == date.getFullYear() %}
              <div class="mt-3 mr-2 rounded-md shadow">
                <a href="/archive/{{ year[0] | slug }}" class="flex w-full items-center justify-center rounded-md border border-transparent bg-indigo-600 px-5 py-2 text-base font-medium text-white hover:bg-indigo-700 dark:bg-indigo-400 dark:text-black dark:hover:bg-indigo-300 md:text-lg">
                  {{ year[0] }}
                </a>
              </div>
            {% else %}
              <div class="mt-3 mr-2">
                <a href="/archive/{{ year[0] | slug }}" class="flex w-full items-center justify-center rounded-md border border-transparent bg-indigo-100 px-5 py-2 text-base font-medium text-indigo-700 hover:bg-indigo-200 dark:bg-indigo-900 dark:text-indigo-300 dark:hover:bg-indigo-800 md:text-lg">
                  {{ year[0] }}
                </a>
              </div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="mb-10 mt-5 flex flex-wrap sm:mt-8 sm:justify-center">
          {% for tag in tags %}
            {% if tag != 'blog' %}
              {% if loop.index == 1 %}
                <div class="mt-3 mr-2 rounded-md shadow">
                  <a href="/tags/{{ tag | slug }}" class="flex w-full items-center justify-center rounded-md border border-transparent bg-indigo-600 px-5 py-2 text-base font-medium text-white hover:bg-indigo-700 dark:bg-indigo-400 dark:text-black dark:hover:bg-indigo-300 md:text-lg">
                    {{ tag }}
                  </a>
                </div>
              {% else %}
                <div class="mt-3 mr-2">
                  <a href="/tags/{{ tag | slug }}" class="flex w-full items-center justify-center rounded-md border border-transparent bg-indigo-100 px-5 py-2 text-base font-medium text-indigo-700 hover:bg-indigo-200 dark:bg-indigo-900 dark:text-indigo-300 dark:hover:bg-indigo-800 md:text-lg">
                    {{ tag }}
                  </a>
                </div>
              {% endif %}
            {% endif %}
          {% endfor %}
        </div>
        <ul x-data="{ showArticle: false }" class="mt-6 flex flex-col items-center justify-center space-y-2 sm:flex-row sm:space-y-0 sm:space-x-8 md:h-screen" x-intersect.once="showArticle = true; $el.classList.remove('md:h-screen')">
          {% set previousPost = collections.blog | getPreviousCollectionItem(page) %}
          {% set nextPost = collections.blog | getNextCollectionItem(page) %}
          {% if previousPost %}
            <div x-data="{ type: 'Prev' }">{% set post = previousPost %}
              {% include 'partials/postcard.njk' %}</div>
          {% endif %}
          {% if nextPost %}
            <div x-data="{ type: 'Next' }">{% set post = nextPost %}
              {% include 'partials/postcard.njk' %}</div>
          {% endif %}
        </ul>
        {%- if env.environment == 'production' -%}
          <div x-data="{ isTopList: true }">
            {% set postslist = collections.blog | top %}
            <ol x-data="{ showArticle: false }" class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-2 md:h-screen lg:grid-cols-3" x-intersect.once="showArticle = true; $el.classList.remove('md:h-screen')">
              {%- for post in postslist -%}
                <div x-data="{ type: '#{{ loop.index }}' }">{%- include 'partials/postcard.njk' -%}</div>
              {%- endfor -%}
            </ol>
          </div>
        {%- endif -%}
      </div>
    {% endblock %}
