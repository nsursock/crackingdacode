---
layout: layouts/page.njk
title: Blog | Cracking Da Code
---

<!-- This example requires Tailwind CSS v2.0+ -->
<div class="relative bg-white overflow-hidden dark:bg-gray-900">
  <div class="max-w-7xl mx-auto">
    <div class=" relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32 dark:bg-gray-900 ">
      <svg
        class=" hidden lg:block absolute right-0 inset-y-0 h-full w-48 text-white dark:text-gray-900 transform translate-x-1/2 "
        fill="currentColor"
        viewbox="0 0 100 100"
        preserveaspectratio="none"
        aria-hidden="true">
        <polygon points="50,0 100,0 50,100 0,100"/>
      </svg>
      <div>
        <div class="relative pt-6 px-4 sm:px-6 lg:px-8"></div>
      </div>
      <main class=" mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28 ">
        <div class="sm:text-center lg:text-left">
          <h1 class=" text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl ">
            <span class="block xl:inline dark:text-white">All posts</span>
            <span class="block text-indigo-600 xl:inline">
              on one page
            </span>
          </h1>
          <p class=" mt-3 text-base text-gray-500 dark:text-gray-400 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl
              lg:mx-0 ">
            Easily browse all {{ collections.blog.length }} posts
          </p>
          <div class=" mt-5 sm:mt-8 sm:justify-center lg:justify-start flex flex-wrap sm:w-4/5 sm:mx-auto "></div>
        </div>
      </main>
    </div>
  </div>
  <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
    <picture>
      <source media="(max-width: 799px)" srcset="https://source.unsplash.com/480x320/?blog"/>
      <source media="(min-width: 800px)" srcset="https://source.unsplash.com/1080x720/?blog"/>
      <img
        class="h-56 w-full object-cover sm:h-72 md:h-96 lg:w-full lg:h-full"
        src="https://source.unsplash.com/1920x1280/?blog"
        alt="unsplash picture of blog"/>
    </picture>
  </div>
</div>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  {# {%- include '../_includes/tagslist.njk' -%} #}
  {%- if env.environment == 'production' -%}
    {# {%- if env.environment == 'production' -%}
    <div x-data="{ isTopList: true }">
      {%- set postslist = collections.blog | top -%}
      <ol
        x-data="{ showArticle: false }"
        class=" md:h-screen mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 "
        x-intersect.once="showArticle = true; $el.classList.remove('md:h-screen')">
        {%- for post in postslist -%}
          <div x-data="{ type: '#{{ loop.index }}' }">
            {%- include 'partials/postcard.njk' -%}
          </div>
        {%- endfor -%}
      </ol>
    </div>
  {%- endif -%} #}
    <div x-data="{ isTopList: false }">
    {% set postslist = collections.blog | reverse %}
    <ol
      x-data="{ showArticle: false }"
      class=" md:h-screen mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 gap-y-7 "
      x-intersect.once="showArticle = true; $el.classList.remove('md:h-screen')">
      {%- for post in postslist -%}
        {%- include 'partials/postcard.njk' -%}
      {%- endfor -%}
    </ol>
  </div>
  {%- else -%}
  <div class="px-4 sm:px-6 lg:px-8">
  <div class="mt-8 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black dark:ring-gray-700 ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300 dark:divide-gray-700">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="dark:bg-gray-800 dark:text-gray-400 py-3 pl-4 pr-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500 sm:pl-6">Title</th>
                <th scope="col" class="dark:bg-gray-800 dark:text-gray-400 px-3 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Information</th>
                <th scope="col" class="dark:bg-gray-800 dark:text-gray-400 px-3 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Category</th>
                <th scope="col" class="dark:bg-gray-800 dark:text-gray-400 px-3 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Length</th>
                <th scope="col" class="dark:bg-gray-800 dark:text-gray-400 relative py-3.5 pl-3 pr-4 sm:pr-6">
                  <span class="sr-only">Read</span>
                </th>
              </tr>
            </thead>
            {% set postslist = collections.blog | reverse %}
            <tbody class="divide-y divide-gray-200 dark:divide-gray-700 bg-white dark:bg-gray-800">
              {%- for post in postslist -%}
              <tr>
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm sm:pl-6">
                  <div class="flex items-center">
                    <div class="h-10 w-10 flex-shrink-0">
                      <img class="h-10 w-10 rounded-full" data-src="{{ post.data.featured }}&q=80&w=50&h=50" alt="" x-intersect.once.ratio-0="$el.src = $el.dataset.src">
                    </div>
                    <div class="ml-4">
                      <div class="font-medium text-gray-900 dark:text-gray-100">{{ post.data.title + ' ' + post.data.title2 }}</div>
                      <div class="text-gray-500 dark:text-gray-400 max-w-md truncate">{{ post.data.description }}</div>
                    </div>
                  </div>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <div class="text-gray-900 dark:text-gray-100">{{ post.data.date | date("MMM dd, yyyy") }}</div>
                  <div class="text-gray-500 dark:text-gray-400">{{ post.data.author }}</div>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <span class="inline-flex rounded-full dark:bg-green-900 dark:text-green-200 bg-green-100 px-2 text-xs font-semibold leading-5 text-green-800">{{ post.data.tags[0] }}</span>
                </td>
                <td x-data="{ time: {{ post.templateContent.split(' ').length / 200 }} }" class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 dark:text-gray-400">
                  <span x-text="`${Math.round(time).toString().split('.')[0]} min read`"/>
                </td>
                <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                  <a href="{{ post.url }}" class="text-indigo-600 hover:text-indigo-900">Read<span class="sr-only">{{ post.data.title + ' ' + post.data.title2 }}</span></a>
                </td>
              </tr>
              {%- endfor -%}

              <!-- More people... -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  {%- endif -%}
  {%- include '../_includes/tagslist.njk' -%}
</div>

</div>