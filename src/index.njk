            <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
              <div class="rounded-md shadow">
                <template x-if="('crdacode_ReturningUser' in localStorage)">
                  <a
                    @click="if (typeof umami !== 'undefined') mixpanel.track('Clicked Primary Button (Code)')"
                    href="/blog/just-solution/"
                    class="umami--click--code-button w-full flex items-center justify-center px-8 py-3 border border-transparent text-base
                      font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10 ">
                    Get The Code
                  </a>
                </template>
                <template x-if="!('crdacode_ReturningUser' in localStorage)">
                  {% set randomPost = collections.blog | getRandom %}
                  <a @click="if (typeof umami !== 'undefined') mixpanel.track('Clicked Primary Button (Random)')" href="{{ randomPost.url }}" class="umami--click--random-button w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10 ">
                    Random Post
                  </a>
                </template>
              </div>
              <div class="mt-3 sm:mt-0 sm:ml-3">
                <a
                  @click="if (typeof umami !== 'undefined') mixpanel.track('Clicked Secondary Button')"
