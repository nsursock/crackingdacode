        'https://images.unsplash.com/photo-1535903021127-d50417eae4a3?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop'
        }"
      }>
      <picture>
        <source media="(max-width: 799px)" height="320" width="480" :srcset="photoUrl + '&q=80&w=480&h=320'"/>
        <source media="(min-width: 800px)" height="720" width="1080" :srcset="photoUrl + '&q=80&w=1080&h=720'"/>
        <img
          fetchpriority="high"
          class="h-56 w-full object-cover sm:h-72 md:h-96 lg:w-full lg:h-full"
          :src="photoUrl + '&q=80&w=1920&h=1280'"
          alt="wall tagged with world peace"/>
      </picture>
    </div>
  </div>
  <section id="posts" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 dark:bg-gray-900">
    <div class="lg:text-center mt-8">
      <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl dark:text-white">
        Explore the blog
      </p>
      <p class="mt-4 max-w-2xl text-xl text-gray-500 lg:mx-auto dark:text-gray-400">
        Discover the most viewed posts of this blog below. Or you can read the latest published posts, fresh from the oven!
      </p>
    </div>
    {# {%- include './_includes/tagslist.njk' -%} #}
    <div x-data="{ isTopList: false }" class="mt-10">
      <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">Latest Posts</h3>
      {# {%- set postslist = collections.blog | reverse -%} #}
      <ol
        x-data="{ showArticle: false }"
        class="snap-y snap-mandatory md:h-screen mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 gap-y-7"
        x-intersect.once="showArticle = true; $el.classList.remove('md:h-screen')">
        {%- for post in pagination.items -%}
          {# {% set views = post.views %}
                                                                                                                                                                                                                                                                                                                                                {% set post = post.post %}
                                                                                                                                                                                                                                                                                                                                                <div class="relative"> #}
          {%- include 'partials/postcard.njk' -%}
          {# <div class='-mx-3 -my-2 w-12 h-12 flex items-center justify-center bg-white rounded-full border  absolute bottom-0 right-0'>
                                                                                                                                                                                                                                                                                                                                                    <span>{{ views }}</span>
                                                                                                                                                                                                                                                                                                                                                  </div>
                                                                                                                                                                                                                                                                                                                                                </div> #}
        {%- endfor -%}
      </ol>
      <!-- This example requires Tailwind CSS v2.0+ -->
      <nav class="mt-5 border-t border-gray-200 dark:border-gray-700 px-4 flex items-center justify-between sm:px-0">
        <div class="-mt-px w-0 flex-1 flex justify-end">
          {% if pagination.href.previous %}
            <a
              href="{{ pagination.href.previous }}#posts" class="border-t-2 border-transparent pt-4 pr-1 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
              <!-- Heroicon name: solid/arrow-narrow-left -->
              <svg
                class="mr-3 h-5 w-5 text-gray-400"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true">
                <path
                  fill-rule="evenodd"
                  d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1
                    1 0 010 1.414z"
                  clip-rule="evenodd"/>
              </svg>
              Prev
            </a>
          {% endif %}
          {% if page.url != pagination.href.first %}
            <a href="{{ pagination.href.first }}#posts" class="ml-2 border-t-2 border-transparent pt-4 pr-1 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
              First
            </a>
          {% endif %}
        </div>
        <div class="hidden md:-mt-px md:flex">
          {% for page_entry in pagination.pages %}
            {%- set page_url = pagination.hrefs[loop.index0] -%}
            <!-- Current: "border-indigo-500 text-indigo-600", Default: "border-transparent text-gray-500 hover:text-gray-700
            hover:border-gray-300" -->
            <a href="{{ page_url }}#posts" {% if page.url == page_url %} class="border-indigo-500 text-indigo-600 border-t-2 pt-4 px-4 inline-flex items-center text-sm font-medium" {% endif %} class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 border-t-2 pt-4 px-4 inline-flex items-center text-sm font-medium" aria-current="page">
              {{ loop.index }}
            </a>
            {# <span class="border-transparent text-gray-500 border-t-2 pt-4 px-4 inline-flex items-center text-sm font-medium"> ... </span> #}
          {% endfor %}
        </div>
        <div class="-mt-px w-0 flex-1 flex ">
          {% if page.url != pagination.href.last %}
            <a href="{{ pagination.href.last }}#posts" class="mr-2 border-t-2 border-transparent pt-4 pl-1 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
              Last
            </a>
          {% endif %}
          {% if pagination.href.next %}
            <a href="{{ pagination.href.next }}#posts" class="border-t-2 border-transparent pt-4 pl-1 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
              Next
              <!-- Heroicon name: solid/arrow-narrow-right -->
              <svg
                class="ml-3 h-5 w-5 text-gray-400"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true">
                <path
                  fill-rule="evenodd"
                  d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0
                    110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"/>
              </svg>
            </a>
          {% endif %}
        </div>
      </nav>
    </div>
    {# {%- if env.environment == 'production' -%} #}
      <div x-data="{ isTopList: true }" class="mt-10">
        <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">Most Viewed Posts</h3>
        {%- set postslist = collections.blog | top -%}
        <ol
          x-data="{ showArticle: false }"
          class="md:h-screen mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4"
          x-intersect.once="showArticle = true; $el.classList.remove('md:h-screen')">
          {%- for post in postslist -%}
            <div x-data="{ type: '#{{ loop.index }}' }">
              {%- include 'partials/postcard.njk' -%}
            </div>
          {%- endfor -%}
        </ol>
      </div>
    {# {%- endif -%} #}
    {% include 'sections/faq.njk' %}
    {% include 'sections/testimonials.njk' %}
    {% if env.environment == "production" %}
      {%- set stats = collections.stats -%}
      {%- include 'partials/stats.njk' -%}
    {% endif %}
  </section>
  <div x-show="showPopup">
    {% include 'partials/popup.njk' %}
  </div>
  <div
    x-data="{ open: false }"
    x-init="() => setTimeout(() => open = true, 500)"
    x-show="open && document.referrer === ''">
    {% include 'cookie-modal.njk' %}
