<section id="posts" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 dark:bg-gray-900">
  <div class="lg:text-center mt-8">
    <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl dark:text-white">
      Explore the blog
    </p>
    <p class="mt-4 max-w-2xl text-xl text-gray-500 lg:mx-auto dark:text-gray-400">
      Discover the most viewed posts of this blog below. Or are you interested in a particular subject? Browse the categories
      and get a list of all posts on the matter. Or you can read the latest published posts, fresh from the oven!
    </p>
  </div>
  {%- if env.environment == 'production' -%}
    <div x-data="{ isTopList: true }">
      {%- set postslist = collections.blog | top -%}
      <ol
        x-data="{ showArticle: false }"
        class="md:h-screen mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4"
        x-intersect.once="showArticle = true; $el.classList.remove('md:h-screen')">
        {%- for post in postslist -%}
          <div x-data="{ type: '#{{ loop.index }}' }">
            {%- include 'partials/postcard.njk' -%}
          </div>
        {%- endfor -%}
      </ol>
    </div>
  {%- endif -%}
  {%- include './_includes/tagslist.html' -%}
  <div x-data="{ isTopList: false }">
    {%- set postslist = collections.blog | reverse -%}
    <ol
      x-data="{ showArticle: false }"
      class="snap-y snap-mandatory md:h-screen mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 gap-y-7"
      x-intersect.once="showArticle = true; $el.classList.remove('md:h-screen')">
      {%- for post in postslist -%}
        {%- include 'partials/postcard.njk' -%}
      {%- endfor -%}
    </ol>
  </div>
  {% include 'sections/faq.njk' %}
  {% if env.environment != "production" %}
    {% include 'sections/testimonials.njk' %}
